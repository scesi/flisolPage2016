<p id="notice"><%= notice %></p>

<h1 class="white-text header center"> <%= @distro.nombre %></h1>

<center>
  <%= image_tag @distro.avatar.url, class: "materialboxed hoverable responsive-img", width:"650"%>
</center>

    <div class="row">
        <div class="col s12 m12">
          <div class="card blue-grey">
            <div class="card-content white-text">
            <span class="card-title">Requerimientos</span>
               <%= render @distro.requerimientos %>
            </div>
            <div class="card-action">
              <a href=<%= @distro.url.to_s %>>Pagina Oficial</a>
            </div>
          </div>
        </div>
      </div>

<div class="slider">
    <ul class="slides">
      <%= render @distro.imagens %> 
    </ul>
</div>

<% if usuario_signed_in? %>
<%= render 'requerimientos/form'%>
<%= render 'imagens/form' %>
<% end %>

<%= link_to 'Edit', edit_distro_path(@distro), class: "waves-effect waves-light btn"  %> |
<%= link_to 'Back',distros_path, class: "waves-effect waves-light btn" %>

<script>  
$(document).ready(function(){
    $('.materialboxed').materialbox();
});
$(document).ready(function(){
      $('.slider').slider({full_width: true});
});
</script>